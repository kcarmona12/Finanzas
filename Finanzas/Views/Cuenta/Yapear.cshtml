@{
    ViewData["Title"] = "Yapear";
    var amigo = (List<Amigo>)Model;
    var cuenta = (List<Cuenta>)ViewBag.Cuenta;
}

<h1>Yapear</h1>

<div class="row">
    <div class="col-6">
        <form action="/Cuenta/Yapear" method="post">
            @if (TempData["Cuenta"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["Cuenta"]
                </div>
            }
            <div class="form-group">
                <label>Yapear a: </label>
                <select name="IdAmigo" class="form-control">
                    <option value="">-- Selecciona una opcion --</option>
                    @foreach (var item in amigo)
                    {
                        <option value="@item.IdUS">@item.Users.Username</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label>De la cuenta</label>
                <select name="IdCuenta" class="form-control">
                    <option value="">-- Selecciona una opcion --</option>
                    @foreach (var item in cuenta)
                    {
                        <option value="@item.Id">@item.Nombre</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label>Saldo a transferir</label>
                <input class="form-control" name="amount" />
                @Html.ValidationMessage("Amount")
            </div>

            <button class="btn btn-primary">Guardar</button>
        </form>
    </div>
</div>