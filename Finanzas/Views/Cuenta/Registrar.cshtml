@{var cuenta = (Cuenta)Model; }

<div class="row">
    <div class="col-3"></div>
    <div class="col-6">
        <form action="/Cuenta/Registrar" method="post">

            <div class="form-group">
                <label>Nombre</label>
                <input class="form-control" name="Nombre" value="@Model.Nombre" />
                <p>@Html.ValidationMessage("Nombre")</p>
            </div>

            <div class="form-group">
                <label>Categoria</label>
                <select name="IdCategoria" class="form-control">
                    <option value="">-- Selecciona una opcion --</option>
                    @foreach (var item in ViewBag.Categorias)
                    {
        <option value="@item.Id">@item.Nombre</option>
}
                </select>
                <p>@Html.ValidationMessage("IdCategoria")</p>
            </div>

            <div class="form-group">
                <label>Saldo</label>
                <input class="form-control" name="Saldo" value="@Model.Saldo" />
                <p>@Html.ValidationMessage("Saldo")</p>
            </div>
            <button type="submit" class="btn btn-primary">Guardar</button>
        </form>
    </div>
    <div class="col-3"></div>
</div>